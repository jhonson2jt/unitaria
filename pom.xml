< project  xmlns = " http://maven.apache.org/POM/4.0.0 "  xmlns : xsi = " http://www.w3.org/2001/XMLSchema-instance "  xsi : schemaLocation = " http: / /maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd " >
  < modelVersion > 4.0.0 </ modelVersion >

  < padre >
    < groupId > org.jacoco </ groupId >
    < artifactId > org.jacoco.build </ artifactId >
    < version > 0.8.3-SNAPSHOT </ version >
    < relativePath > ../ org.jacoco.build </ relativePath >
  </ padre >

  < artifactId > jacoco </ artifactId >
  < embalaje > pom </ embalaje >

  < nombre > JaCoCo :: Distribución </ nombre >
  < descripción > Distribución independiente JaCoCo </ descripción >

  < dependencias >
    < dependencia >
      < groupId > $ {project.groupId} </ groupId >
      < artifactId > org.jacoco.core </ artifactId >
    </ dependencia >
    < dependencia >
      < groupId > $ {project.groupId} </ groupId >
      < artifactId > org.jacoco.report </ artifactId >
    </ dependencia >
    < dependencia >
      < groupId > $ {project.groupId} </ groupId >
      < artifactId > org.jacoco.agent </ artifactId >
    </ dependencia >
    < dependencia >
      < groupId > $ {project.groupId} </ groupId >
      < artifactId > org.jacoco.agent </ artifactId >
      < version > $ {project.version} </ version >
      < clasificador > tiempo de ejecución </ clasificador >
    </ dependencia >
    < dependencia >
      < groupId > $ {project.groupId} </ groupId >
      < artifactId > org.jacoco.ant </ artifactId >
    </ dependencia >
    < dependencia >
      < groupId > $ {project.groupId} </ groupId >
      < artifactId > org.jacoco.ant </ artifactId >
      < clasificador > nodeps </ clasificador >
    </ dependencia >
    < dependencia >
      < groupId > $ {project.groupId} </ groupId >
      < artifactId > org.jacoco.cli </ artifactId >
      < version > $ {project.version} </ version >
      < clasificador > nodeps </ clasificador >
    </ dependencia >
    < dependencia >
      < groupId > $ {project.groupId} </ groupId >
      < artifactId > org.jacoco.examples </ artifactId >
      < version > $ {project.version} </ version >
      < tipo > zip </ tipo >
    </ dependencia >
    < dependencia >
      < groupId > $ {project.groupId} </ groupId >
      < artifactId > org.jacoco.doc </ artifactId >
      < version > $ {project.version} </ version >
      < clasificador > javadoc </ clasificador >
    </ dependencia >
  </ dependencias >

  < construir >
    < sourceDirectory > src </ sourceDirectory >

    < plugins >
      < plugin >
        < groupId > org.apache.maven.plugins </ groupId >
        < artifactId > maven-assembly-plugin </ artifactId >
        < ejecuciones >
          < ejecución >
            < fase > paquete </ fase >
            < objetivos >
              < goal > single </ goal >
            </ objetivos >
            < configuración >
              < finalName > jacoco- $ { Qualified.bundle.version } </ finalName >
              < appendAssemblyId > false </ appendAssemblyId >
              < descriptores >
                < descriptor > assembly.xml </ descriptor >
              </ descriptores >
            </ configuración >
          </ ejecución >
        </ ejecuciones >
      </ plugin >

      < plugin >
        < groupId > org.apache.maven.plugins </ groupId >
        < artifactId > maven-enforcer-plugin </ artifactId >
        < ejecuciones >
          < ejecución >
            < id > enforce-distribution-size </ id >
            < objetivos >
              < objetivo > hacer cumplir </ objetivo >
            </ objetivos >
            < fase > verificar </ fase >
            < configuración >
              < reglas >
                < requireFilesSize >
                  < tamaño máximo > 4300000 </ tamaño máximo >
                  < minsize > 3400000 </ minsize >
                  < archivos >
                    < archivo > $ {project.build.directory} / jacoco- $ { Qualified.bundle.version } .zip </ file >
                  </ archivos >
                </ requireFilesSize >
              </ rules >
            </ configuración >
          </ ejecución >
        </ ejecuciones >
      </ plugin >
    </ plugins >
  </ construir >
</ proyecto >